@charset "UTF-8";
.signal-container .signal {
  position: relative;
  top: 0;
  left: -20%;
}

.signal-container .signal .signal-value {
  width: 100%;
  height: 100%;
  background: #bbb;
  border-radius: 50%;
  box-sizing: border-box;
  /* 有信号 */
}

.signal-container .signal .signal-value.active {
  background: #0364f5;
}

.signal-container .signal .signal-value.active .signal-value {
  background: #0364f5;
}

.signal-container .signal .signal-mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  border-radius: 50%;
  overflow: hidden;
}

.signal-container .signal .signal-mask .mask1 {
  width: 100%;
  height: 50%;
  position: absolute;
  bottom: 0;
  background: #fff;
}

.signal-container .signal .signal-mask .mask-left {
  width: 50%;
  height: 50%;
  position: absolute;
  top: 0;
  left: 0;
  background: #fff;
  transform: rotate(45deg);
  transform-origin: -20% 50%;
}

.signal-container .signal .signal-mask .mask-right {
  width: 50%;
  height: 50%;
  position: absolute;
  top: 0;
  right: 0;
  background: #fff;
  transform: rotate(135deg);
  transform-origin: 50% 80%;
}
