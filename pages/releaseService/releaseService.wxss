.replease {
  padding: 20rpx 0 180rpx;
  background-color: #fff;
}

.replease .label {
  flex: 1;
  color: var(--fcolor);
  font-size: 24rpx;
}

.replease .label.tip {
  font-weight: bold;
  font-size: 28rpx;
}

.replease .item {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.replease .item > text {
  margin-right: 10rpx;
}

.replease .bot-btns {
  padding: 20rpx 30rpx 60rpx;
  background-color: #fff;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 2;
}

.replease button {
  background-color: var(--tc);
}
