page {
    --tc: #ffd200;
    --theam-color: #ffd200;
    --fcolor: #333333;
    --ww: 0.872;
    background-color: #efefef;
}


/* 省略号 */

.ell {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.ell-more {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.ell2 {
    -webkit-line-clamp: 2;
}

.ell3 {
    -webkit-line-clamp: 3;
}

.flex-r {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.flex-c {
    display: flex;
    flex-direction: column;
}

.center {
    align-items: center;
    justify-content: center;
}

.f-between {
    display: flex;
    justify-content: space-between;
}

.f-around {
    display: flex;
    justify-content: space-around;
}

.line05::after {
    content: ' ';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1rpx;
    border-top: 1rpx solid #eeeeee;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.container {
    min-height: 100%;
}

button[type='save'] {
    background-color: var(--tc);
    border-radius: 4px;
    height: 88rpx !important;
    line-height: 88rpx !important;
    text-align: center;
    padding: 0 !important;
    font-weight: normal !important;
    width: 100% !important;
    font-size: 28rpx !important;
    color: var(fcolor);
    letter-spacing: 0.23rpx;
}

.form-main {
    display: flex;
    flex-direction: column;
    padding: 0 40rpx;
}

.form-main.reg-log {
    height: 100vh;
    background-color: #fff;
}

.form-group {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: relative;
}

.form-group input {
    padding: 20rpx 0;
    height: 40rpx;
    border: none;
    font-size: 28rpx;
    color: #23292f;
}

.form-group .yzm {
    font-size: 24rpx;
    color: #e32416;
    font-family: PingFangSC-Regular;
}

.form-group .imgcode {
    width: 140rpx;
    height: 70rpx;
}

::-webkit-scrollbar {
    display: none;
    width: 0 !important;
    height: 0 !important;
    -webkit-appearance: none;
    background: transparent;
}

.popup-main {
    height: 820rpx;
    padding: 10rpx 0;
}

.popup-main .head {
    display: flex;
    height: 60rpx;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
}

.popup-main .head view {
    color: #333;
    font-size: 24rpx;
}

.popup-main .head view:last-child {
    color: #3c9cff;
}

.popup-main .content {
    margin-top: 20rpx;
}

.popup-main .popup-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    padding: 10rpx 30rpx;
}

.popup-main .popup-box.checked {
    background-color: #ffd200;
}

.popup-main .popup-box view {
    font-size: 28rpx;
}

.popup-main .popup-box text {
    font-size: 24rpx;
    color: #333;
    margin-top: 10rpx;
}

.popup-main .filter .top {
    display: flex;
    height: 88rpx;
    align-items: center;
    justify-content: center;
    position: relative;
    color: #9e9e9e;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 50rpx;
}

.popup-main .filter .top .clear {
    position: absolute;
    right: 30rpx;
    top: 24rpx;
}

.popup-main .filter .filter-box {
    padding: 20rpx 30rpx;
}

.popup-main .filter .filter-box .name {
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
    line-height: 50rpx;
    margin-bottom: 36rpx;
}

.popup-main .filter .filter-box .attr {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.popup-main .filter .filter-box .attr .box {
    width: calc(calc(100% - 100rpx) / 3);
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 12rpx;
    border: 1px solid #000;
    box-sizing: border-box;
    text-align: center;
    margin-bottom: 30rpx;
}

.popup-main .filter .filter-box .attr .box.checked {
    background-color: #ffd200;
}

.popup-main .filter .btns {
    position: absolute;
    bottom: 54rpx;
    left: 0;
    width: 100%;
    height: 98rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
}

.popup-main .filter .btns .btn {
    color: #ffd200;
    font-size: 36rpx;
    line-height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
}

.popup-main .filter .btns .btn.sure {
    flex: auto;
    width: 474rpx;
    color: #333;
    border-radius: 12rpx;
    background-color: #ffd200;
}


/* 急招 */

.hot {
    background: #e93a3a;
    font-size: 24rpx;
    border-radius: 8rpx;
    padding: 4rpx 8rpx;
    color: #fff;
    margin-left: 10rpx;
}

.foot {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding-bottom: 40rpx;
}

.foot button {
    margin-top: 40rpx;
    color: #444;
}

.foot .copy {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #999;
    margin-top: 40rpx;
}